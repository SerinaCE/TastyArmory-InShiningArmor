<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Flintlock Musket ==================== -->
	
	<ThingDef ParentName="BaseBullet">
		<defName>TA_Bullet_SiegeHarkebus</defName>
		<label>musket bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>27</damageAmountBase>
			<stoppingPower>3</stoppingPower>
			<armorPenetrationBase>0.5</armorPenetrationBase>
			<speed>60</speed>
		</projectile>
	</ThingDef>

  <ThingDef ParentName="BaseMakeableGun">
    <defName>TA_SiegeHarkebus</defName>
    <label>siege arquebus</label>
    <description>proto-musket.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Weapons/Ranged/TA_SiegeHarkebus</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.15</drawSize>
    </graphicData>
		<equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
    <costList>
		<Cloth>10</Cloth>
		<Steel>75</Steel>
		<WoodLog>15</WoodLog>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>Gun</li>
      <li>SimpleGun</li>
      <li>NeolithicRangedHeavy</li>
      <li>NeolithicRangedChief</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite />
    </recipeMaker>
	<generateCommonality>1.3</generateCommonality>
	<statBases>
		<WorkToMake>17500</WorkToMake>
		<Mass>7.5</Mass>
		<AccuracyTouch>0.30</AccuracyTouch>
		<AccuracyShort>0.35</AccuracyShort>
		<AccuracyMedium>0.70</AccuracyMedium>
		<AccuracyLong>0.50</AccuracyLong>
		<RangedWeapon_Cooldown>4.2</RangedWeapon_Cooldown>
	</statBases>
	<verbs>
		<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>TA_Bullet_SiegeHarkebus</defaultProjectile>
			<warmupTime>1.5</warmupTime>
			<range>34.9</range>
			<soundCast>Shot_Revolver</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</li>
	</verbs>
	<tools>
		<li>
			<label>stock</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
				<li>Poke</li>
			</capacities>
			<power>8</power>
			<cooldownTime>2</cooldownTime>
		</li>
	</tools>
	<modExtensions>
		<li Class="CombatExtended.GunDrawExtension" MayRequire="CETeam.CombatExtended">
			<DrawOffset>0.1,0.1</DrawOffset>
		</li>
	</modExtensions>
  </ThingDef>

</Defs>
